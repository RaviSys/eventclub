<div class="card rounded-0 mt-2 mb-5">
  <div class="card-body">
    <h3 class="mb-4">Filter Sponsers</h3>
    <%= search_form_for @q, url: :admin_sponsers do |form| %>
      <div class="form-group row">
        <div class="col-md-6">
          <%= form.text_field :sponsered_by_cont, class: "form-control rounded-0", placeholder: "Search by sponser name" %>
        </div>
        <div class="col-md-6">
          <%= form.text_field :about_cont, class: "form-control rounded-0", placeholder: "Search by description" %>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-md-6">
          <%= form.text_field :website_cont, class: "form-control rounded-0", placeholder: "Search by website" %>
        </div>
        <div class="col-md-6">
          <%= form.text_field :contact_cont, class: "form-control rounded-0", placeholder: "Search by contact" %>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-md-6">
          <%= form.number_field :amount_eq, class: "form-control rounded-0", placeholder: "Search by amount" %>
        </div>
      </div>
      <%= submit_tag "Search", class: "btn btn-primary rounded-0" %>
      <%= link_to "Reset", admin_sponsers_path, class: "btn btn-secondary rounded-0" %>
    <% end %>
  </div>
</div>
