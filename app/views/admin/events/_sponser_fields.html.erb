<div class="nested-fields">
  <div class="form-group row">
    <div class="col-md-8">
      <%= f.label 'Sponsered_by' %>
      <%= f.text_field :sponsered_by, class: "form-control rounded-0", placeholder: "Sponsered by" %>
    </div>
    <div class="col-md-4">
      <%= f.label 'Logo Image' %><br>
      <%= f.file_field :logo_image %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-md-4">
      <%= f.label 'Amount' %>
      <%= f.text_field :amount, class: "form-control rounded-0", placeholder: " Sponser's Amount" %>
    </div>
    <div class="col-md-4">
      <%= f.label 'Website' %>
      <%= f.text_field :website, class: "form-control rounded-0", placeholder: "Website" %>
    </div>
    <div class="col-md-4">
      <%= f.label 'Sponser Contact' %>
      <%= f.text_field :contact, class: "form-control rounded-0", placeholder: "Sponser's contact" %>
    </div>
  </div>  
  <div class="form-group row">
    <div class="col-md-12">
      <%= f.label 'About Sponser' %>
      <%= f.text_area :about, class: "form-control rounded-0", placeholder: "About Sponser", rows: "5" %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-md-3">
      <%= link_to_remove_association "Remove Sponser", f, class: "btn btn-danger rounded-0 mb-3" %>
    </div>
  </div>
</div>
