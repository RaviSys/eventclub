<div class="card rounded-0">
  <div class="card-body">
    <h3 class="mb-4">Listing Events</h3>
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Name</th>
          <th colspan="3">Action</th>
        </tr>
      </thead>
      <tbody>
        <% @events.each do |event| %>
          <tr>
            <td><%= link_to event.name, admin_event_path(event) %></td>
            <td>
              <%= link_to 'Show', admin_event_path(event), class: "btn btn-primary btn-sm rounded-0" %>
              <%= link_to 'Edit', edit_admin_event_path(event),class: "btn btn-secondary btn-sm rounded-0" %>
              <%= link_to 'Destroy', admin_event_path(event), method: :delete, data: { confirm: 'Are you sure?' },class: "btn btn-danger btn-sm rounded-0" %>  
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= link_to 'New Event', new_admin_event_path, class: "btn btn-primary rounded-0 btn-lg" %>
  </div>
</div>
